{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "ES6",
		"module": "ES2020",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
